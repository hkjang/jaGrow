# ================================
# JaGrow Backend Environment Variables
# Copy this file to .env
# ================================

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/jagrow?schema=public"

# Authentication
JWT_SECRET="super-secret-key-change-in-production"
JWT_EXPIRATION="7d"

# Redis
REDIS_URL="redis://localhost:6379"

# Application
NODE_ENV="development"
PORT=4000

