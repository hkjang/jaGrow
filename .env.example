# ================================
# JaGrow Environment Variables
# Copy this file to .env and fill in your values
# ================================

# ----------------
# Database (PostgreSQL)
# ----------------
DATABASE_URL="postgresql://user:password@localhost:5432/jagrow?schema=public"

# Production database settings (for docker-compose.prod.yml)
POSTGRES_USER=jagrow
POSTGRES_PASSWORD=jagrow_secret
POSTGRES_DB=jagrow

# ----------------
# Redis Cache
# ----------------
REDIS_URL="redis://localhost:6379"

# ----------------
# Authentication
# ----------------
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRATION="7d"

# ----------------
# Application
# ----------------
NODE_ENV="development"
PORT=4000

# ----------------
# Frontend (Optional)
# ----------------
NEXT_PUBLIC_API_URL="http://localhost:4000"

# ----------------
# Third-party Integrations (Optional)
# ----------------
# OPENAI_API_KEY=""
# GOOGLE_CLIENT_ID=""
# GOOGLE_CLIENT_SECRET=""
# NAVER_CLIENT_ID=""
# NAVER_CLIENT_SECRET=""
# KAKAO_CLIENT_ID=""
# KAKAO_CLIENT_SECRET=""

